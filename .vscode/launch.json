{
  "version": "0.2.0",
  "configurations": [
    

    {
      "name": "Debug Playwright (TypeScript)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": [
        "test",
        "--project=chromium",
        "--headed",
        "--timeout=0"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "DEBUG": "pw:api"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
